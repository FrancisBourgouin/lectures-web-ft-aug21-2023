<p style="color: green"><%= notice %></p>

<main style="margin: 1em">
  <% if current_user %>
  <h1>My Urls</h1>
  <% else %>
  <h1>All Urls</h1>
  <% end %>

  <table class="table">
    <thead>
      <tr>
        <th scope="col">Short URL</th>
        <th scope="col">Long URL</th>
        <th scope="col">Description</th>
        <th scope="col">Edit</th>
      </tr>
    </thead>
    <tbody>
      <% @urls.each do |url| %> 
        <%= render url %> 

      <% end %>
      </tbody>
      </table>
</main>
